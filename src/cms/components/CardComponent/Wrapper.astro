---
interface Props {
    DisplayAs: string;
}
const { DisplayAs } = Astro.props as Props;
const cssClasses = {
    textOnRight:
        'mx-auto max-w-7xl flex flex-col gap-8 rounded-xl md:flex-row md:gap-12 lg:gap-20',
    textOnLeft:
        'mx-auto max-w-7xl flex flex-col-reverse gap-8 rounded-xl md:flex-row-reverse md:gap-12 lg:gap-20',
    textAboveCard:
        'mx-auto max-w-7xl flex flex-col-reverse gap-8 rounded-xl md:gap-12 lg:gap-20',
    textBelowCard:
        'mx-auto max-w-7xl flex flex-col gap-8 rounded-xl md:gap-12 lg:gap-20',
};
const cssClass = cssClasses[DisplayAs as keyof typeof cssClasses];
---

<div class={`${cssClass} opacity-100`}>
    <slot />
</div>
