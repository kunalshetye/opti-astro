---
import type { OdpFormFragment, DisplaySettingsFragment } from '../../../../__generated/sdk';
import type { ContentPayload } from '../../../graphql/shared/ContentPayload';
import { isEditContext } from '../../shared/utils.ts';


export interface Props {
    key: string;
    data: OdpFormFragment;
    displaySettings: DisplaySettingsFragment[];
    contentPayload: ContentPayload;
}

const { key, data, displaySettings } = Astro.props as Props;

// Build the selector attributes based on SelectorType
const selectorAttributes: Record<string, string> = {};
const hasValidSelector = data.SelectorType && data.SelectorName;

if (hasValidSelector) {
    if (data.SelectorType === 'id') {
        selectorAttributes.id = data.SelectorName;
    } else if (data.SelectorType === 'class') {
        selectorAttributes.class = data.SelectorName;
    }
}
---

<div 
    class="odp-form-container w-full"
>
    {hasValidSelector ? (
        <!-- ODP Form will be rendered here -->
        <div 
            {...selectorAttributes}
            data-odp-selector-type={data.SelectorType}
            data-odp-selector-name={data.SelectorName}
        >
            <!-- Empty div for ODP form to render into -->
        </div>
    ) : (
        <!-- Warning message when selector is not configured -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <div class="flex items-center">
                <svg class="w-5 h-5 text-yellow-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                <div>
                    <p class="text-yellow-800 font-semibold">ODP Form Configuration Required</p>
                    <p class="text-yellow-700 text-sm mt-1">Please configure the Selector Type and Selector Name for this block to work properly.</p>
                </div>
            </div>
        </div>
    )}
</div>
