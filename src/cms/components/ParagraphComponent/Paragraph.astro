---
import type { DisplaySettingsFragment, ParagraphFragment } from '../../../../__generated/sdk';
import type { ContentPayload } from '../../../graphql/shared/ContentPayload';
import { getParagraphStyleConfig } from './ParagraphStyling';


export interface Props {
    data: ParagraphFragment;
    displaySettings: DisplaySettingsFragment[];
    contentPayload: ContentPayload;
}
const { data, displaySettings} = Astro.props as Props;

const { paragraphAlignment, animationClasses } = getParagraphStyleConfig(displaySettings);
---

<div class:list={[paragraphAlignment, animationClasses]} set:html={data.Text?.html} />
