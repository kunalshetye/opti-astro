---
import type { ContentPayload } from '../../graphql/shared/ContentPayload';
import { importComponent, buildComponentProps, hasComponentType } from '../../lib/component-registry.js';

interface Props {
    contentPayload: ContentPayload;
    data: any;
}

const { contentPayload, data } = Astro.props as Props;
const { component, displaySettings, displayTemplateKey } = data;
const componentType = component._metadata.types[0];

// Check if component type is registered and try to import it
let Component = null;
let componentError = null;

if (!hasComponentType(componentType)) {
    componentError = `Component type '${componentType}' not found in schema registry`;
} else {
    try {
        Component = await importComponent(componentType);
    } catch (error) {
        componentError = `Failed to import component '${componentType}': ${error.message}`;
    }
}

// Build props for the component if we have one
const componentProps = Component ? buildComponentProps(componentType, {
    contentPayload,
    data: component,
    displaySettings,
    displayTemplateKey
}) : {};
---

{
    componentError ? (
        <div class="alert alert-warning border-2 border-amber-400 bg-amber-50 p-4 rounded-lg">
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-amber-800">
                        Component Loading Error
                    </h3>
                    <div class="mt-2 text-sm text-amber-700">
                        <p>{componentError}</p>
                        <p class="mt-1">
                            <strong>Component Type:</strong> {componentType}
                        </p>
                        <p class="mt-1 text-xs">
                            To resolve this: Create the component schema in the schemas/ folder and ensure the corresponding .astro file exists.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    ) : (
        <Component {...componentProps} />
    )
}