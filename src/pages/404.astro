---
import Layout from '../layouts/Layout.astro';
import type { Locales } from '../../__generated/sdk';
import type { ContentPayload } from '../graphql/shared/ContentPayload';
import { getCurrentLocale, localeToSdkLocale } from '../lib/locale-utils';
import '../styles/global.css';

const title = "404";
const description = "This page can't be found ðŸ˜­";
const lang = getCurrentLocale(Astro);

const ctx = 'view';

var contentPayload: ContentPayload = {
    ctx: ctx,
    key: '',
    ver: '',
    loc: localeToSdkLocale(lang) as Locales,
    preview_token: '',
    types: [],
};

// TODO: pull 404 page title, description, and content from CMS

---

<Layout
    title={title}
    description={description}
